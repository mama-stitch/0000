void rev_string(char s[]){
    int i; 
    int len = len(s);
    for(i = 0; s[i] != '\0'; i++){ 
        printf("%s",s);
    }

    for(j = len - 1; j >= 0; j--){
        printf("%c",str2[j]);
    }


}
